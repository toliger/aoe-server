package utils

import (
  "os"
  "strconv"
  rlog "log"
)

func getenv(key, fallback string) string {
    value := os.Getenv(key)
    if len(value) == 0 {
        return fallback
    }
    return value
}

func log(msg string) {
  b, _ := strconv.ParseBool(getenv("DEBUG", "false"))

  if (b) {
    rlog.Print(msg)
  }
}
